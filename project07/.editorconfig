# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# For more information about the properties used in this file, please see the EditorConfig documentation: http://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{js,jsx,ts,tsx,json,md,html,css,scss}]
# Use 2 spaces for indentation in JavaScript, TypeScript, JSON, HTML, CSS, SCSS
indent_style = space
indent_size = 2

# Trim trailing whitespaces in JavaScript, TypeScript, JSON, HTML, CSS, SCSS
trim_trailing_whitespace = true

# Ensure a single newline at the end of every file
insert_final_newline = true

# Set default charset to utf-8
charset = utf-8

# Settings for JavaScript and TypeScript files
[*.{ts,tsx,jsx,js}]
quote_type = single
insert_final_newline = false

[*.json]
# Allow trailing commas in JSON files
allow_trailing_commas = true

# Settings for Markdown files
[*.md]
# Use single trailing spaces in Markdown files
trim_trailing_whitespace = false